	public ArrayList<LoginfoVO> select(LoginfoVO loginfoVO);
	<select id="select" parameterType="com.biz.log.LoginfoVO" resultType="com.biz.log.LoginfoVO">
	select lseq, id, regdate 
	from loginfo
	<where>
	<if test="id != null">
		id like '%'||#{id}||'%'
	</if>
	<if test="regdate != null">
		and regdate = to_date(#{regdate}, 'YYYYMMDD')
	</if>
	</where>
	</select>
	
	<insert id="insert" parameterType="String">
	insert into loginfo
    values(loginfo_seq.nextval, #{id}, sysdate);
	</insert>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
